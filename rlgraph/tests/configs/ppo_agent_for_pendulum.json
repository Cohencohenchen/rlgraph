{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": false,
  "clip_ratio": 0.2,
  "discount": 0.9,
  "gae_lambda": 1.0,
  "weight_entropy": 0.0,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 2000
  },
   "preprocessing_spec": [
    {
      "type": "moving_standardize",
      "scope": "moving-standardize"
    }
  ],
  "observe_spec": {
    "buffer_size": 500
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden1"
    },
        {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 100,
      "activation": "relu",
      "scope": "vf-hidden1"
    }
  ],

  "update_spec": {
    "update_mode": "episodes",
    "do_updates": true,
    "update_interval": 2000,
    "batch_size": 1,
    "num_iterations": 10,
    "sample_size": 128
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0002
  },
  
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0002
  }
}
