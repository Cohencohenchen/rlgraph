{
  "type": "dqn",

  "memory_spec": {
    "type": "prioritized-replay",
    "capacity": 64
  },
  "preprocessing_spec": [
    {
      "type": "convert-type",
      "to_dtype": "float32"
    }
  ],
  "policy_spec": {
    "type": "dueling-policy",
    "network_spec":
    [
      {
        "type": "dense",
        "units": 16,
        "activation": "lrelu"
      }
    ],
    "units_state_value_stream": 16,
    "action_adapter_spec":
    {
      "turn": {
        "pre_network_spec": [
          {
            "type": "dense",
            "units": 16,
            "activation": "lrelu"
          }
        ]
      },
      "forward": {
        "pre_network_spec": [
          {
            "type": "dense",
            "units": 16,
            "activation": "lrelu"
          }
        ]
      },
      "jump": {
        "pre_network_spec": [
          {
            "type": "dense",
            "units": 16,
            "activation": "lrelu"
          }
        ]
      }
    }
  },

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear_decay",
        "from": 1.0,
        "to": 0.2,
        "start_timestep": 0,
        "num_timesteps": 40000
      }
    }
  },

  "observe_spec":
  {
    "buffer_size": 64
  },

  "update_spec": {
    "do_updates": true,
    "update_interval": 4,
    "batch_size": 8,
    "sync_interval": 128
  },

  "optimizer_spec":
  {
    "type": "adam",
    "learning_rate": 0.001,
    "clip_grad_norm": 10
  }
}
