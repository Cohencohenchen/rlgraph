{
  "type": "apex",
  "discount": 0.99,
  "memory_spec": {
    "type": "prioritized_replay",
    "capacity": 10000
  },
  "saver_spec": null,
  "preprocessing_spec": [
    {
      "type": "grayscale",
      "keep_rank": true,
      "scope": "grayscale"
    },
    {
      "type": "image_resize",
      "width": 80,
      "height": 80,
      "scope": "image_resize"
    },
    {
      "type": "convert_type",
      "to_dtype": "float",
      "scope": "convert_type"
    },
    {
      "type": "sequence",
      "sequence_length": 4,
      "batch_size": 1,
      "add_rank": false,
      "scope": "sequence"
    }
  ],
  "network_spec": [
    {
      "type": "conv2d",
      "filters": 16,
      "kernel_size": 8,
      "strides": 4,
      "padding": "same",
      "activation": "relu",
      "scope": "conv1"
    },
    {
      "type": "conv2d",
      "filters": 32,
      "kernel_size": 4,
      "strides": 2,
      "padding": "same",
      "activation": "relu",
      "scope": "conv2"
    },
    {
      "type": "conv2d",
      "filters": 512,
      "kernel_size": 10,
      "strides": 1,
      "padding": "valid",
      "activation": "relu",
      "scope": "conv3"
    },
    {
      "type": "reshape",
      "flatten": true
    },
    {
      "type": "dense",
      "units": 256,
      "activation": "relu"
    }
  ],
  "exploration_spec": {
    "non_explore_behavior": "max-likelihood",
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear_decay",
        "from": 1.0,
        "to": 0.02,
        "start_timestep": 50000,
        "num_timesteps": 1000000
      }
    }
  },
  "execution_spec": {
    "gpu_spec": { "gpus_enabled" : false},
    "disable_monitoring": true,
    "ray_spec": {
      "executor_spec": {
        "redis_address": null,
        "num_cpus": 18,
        "num_gpus": 0,
        "weight_sync_steps": 400,
        "replay_sampling_task_depth": 4,
        "env_interaction_task_depth": 2,
        "num_worker_samples": 50,
        "learn_queue_size": 16,
        "num_cpus_per_worker": 1,
        "num_gpus_per_worker": 0,
        "num_sample_workers": 8,
        "num_replay_workers": 1
      },
      "worker_spec": {
        "execution_spec": {
          "gpu_spec": { "gpus_enabled" : false},
          "disable_monitoring": true
        },
        "num_worker_environments": 4,
        "num_background_envs": 2,
        "frame_skip": 1,
        "n_step_adjustment": 3,
        "worker_computes_weights": true,
        "sample_exploration": true,
        "exploration_min_value": 0.5
      },
      "apex_replay_spec": {
        "memory_spec": {
          "capacity": 2000000,
          "alpha": 0.6,
          "beta": 0.4,
          "n_step_adjustment": 3
        },
        "clip_rewards": true,
        "min_sample_memory_size": 50000
      }
    }
  },
  "observe_spec": {
    "buffer_size": 3000
  },
  "update_spec": {
    "do_updates": true,
    "update_interval": 4,
    "steps_before_update": 50000,
    "batch_size": 512,
    "sync_interval": 500000
  },
  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0001,
    "clip_grad_norm": 40
  }
}
