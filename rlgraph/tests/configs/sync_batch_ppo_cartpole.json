{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": false,
  "clip_ratio": 0.2,
  "discount": 0.9,
  "gae_lambda": 1.0,
  "weight_entropy": 0.0,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 2000
  },
  "preprocessing_spec": null,
  "observe_spec": {
    "buffer_size": 500
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden1"
    },
        {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 100,
      "activation": "relu",
      "scope": "vf-hidden1"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 2000,
    "batch_size": 2000,
    "num_iterations": 10,
    "sample_size": 128
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0002
  },

  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0002
  },
  "execution_spec": {
    "session_config": {
      "log_device_placement": false,
      "allow_soft_placement": true
    },
    "ray_spec": {
      "executor_spec": {
        "redis_address": null,
        "num_cpus": 4,
        "num_gpus": 0,
        "num_worker_samples": 2000,
        "num_sample_workers": 2
      },
      "worker_spec": {
        "num_worker_environments": 1,
        "execution_spec": {
          "gpu_spec": { "gpus_enabled" : false}
        },
        "worker_computes_weights": true,
        "sample_exploration": false,
        "exploration_min_value": 0.5,
        "compress_states": false
      }
    }
  }
}
