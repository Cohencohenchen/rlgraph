{
  "type": "actor_critic",
  "sample_episodes": false,
  "discount": 0.99,
  "gae_lambda": 1.0,
  "weight_entropy": 0.01,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 1000
  },

  "preprocessing_spec":
  [],

  "observe_spec": {
    "buffer_size":200
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "hidden2"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 400,
    "batch_size": 400
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0025
  }
}
