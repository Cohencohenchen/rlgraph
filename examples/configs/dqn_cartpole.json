{
  "type": "dqn",

  "memory_spec":
  {
    "type": "replay",
    "capacity": 128
  },

  "preprocessing_spec":
  [],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 20,
      "activation": "tanh",
      "scope": "hidden"
    }
  ],

  "action_adapter_spec":
  {
    "type": "dueling-action-adapter",
    "units_state_value_stream": 3,
    "units_advantage_stream": 3
  },

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear_decay",
        "from": 1.0,
        "to": 0.05,
        "start_timestep": 0,
        "num_timesteps": 1500
      }
    }
  },

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 4,
    "batch_size": 16,
    "sync_interval": 32
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.02
  }
}
